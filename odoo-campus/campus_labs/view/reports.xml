<openerp>
<data>
    <report
        id="report_cliente"
        model="campus.cliente"
        string="Reporte Cliente"
        name="campus_labs.report_cliente_view"
        file="campus.report_cliente"
        report_type="qweb-pdf" />

    <template id="report_cliente_view">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="report.external_layout">
                    <div class="page">
                             
                        <h2>Cliente</h2>
                        <p>Nombre: <span t-field="doc.name"/></p>
                        <p>Descripcion: <span t-field="doc.description"/></p>

                    </div>
                </t>
            </t>
        </t>
    </template>
</data>
</openerp>